<div>

<h2 style="color: brown; text-align: center;">Productos</h2>

<% if (productos.length>0) { %>
    <table class="table table-dark table-hover">
        <tr><th>Producto</th><th>Precio</th><th>Foto</th></tr>
       <% for(producto of productos){%>
           <tr>
            <td> <%= producto.product %></td>
            <td> $<%=  producto.price %></td>
            <td> <img src="<%=  producto.foto %>">  </td>
            </tr>
       <%};%>
      </table>
 
<% }else{ %>
<p class="alert alert-danger">No se encontro el producto</p>
<%}%>
</div>


